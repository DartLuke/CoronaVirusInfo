<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="#9E9F9F"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/linerLayout_titles"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginBottom="@dimen/margin_bottom"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmed"
        android:layout_marginBottom="@dimen/margin_bottom"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Death"
        android:layout_marginBottom="@dimen/margin_bottom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recovered"
        android:layout_marginBottom="@dimen/margin_bottom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:layout_marginBottom="@dimen/margin_bottom"
        />

</LinearLayout>

    <LinearLayout
        app:layout_constraintStart_toEndOf= "@id/linerLayout_titles"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginBottom="@dimen/margin_bottom"
            />

        <TextView
            android:id="@+id/text_view_confirmed"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:layout_marginBottom="@dimen/margin_bottom"
            />

        <TextView
            android:id="@+id/text_view_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deaths"
            android:layout_marginBottom="@dimen/margin_bottom"
            />



        <TextView
            android:id="@+id/text_view_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recovered"
            android:layout_marginBottom="@dimen/margin_bottom"
            />
        <TextView
            android:id="@+id/text_view_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:layout_marginBottom="@dimen/margin_bottom"
            />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>